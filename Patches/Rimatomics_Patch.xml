<?xml version="1.0" encoding="utf-8" ?>
<Patch>	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Rimatomics</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- ghoulish-->
				<li Class="PatchOperationAdd">
				<xpath>/Defs/TraitDef[defName = "FT_Ghoulish"]/degreeDatas/li/statOffsets</xpath>
					<value><li><Radiation>-1</Radiation></li></value>
				</li>
				<!-- rad resistant -->
				<li Class="PatchOperationAdd">
				<xpath>/Defs/TraitDef[defName = "FT_RadResistant"]/degreeDatas/li[1]/statOffsets</xpath>
					<value><li><Radiation>-0.3</Radiation></li></value>
				</li>
				<!-- rad tolerant -->
				<li Class="PatchOperationAdd">
				<xpath>/Defs/TraitDef[defName = "FT_RadResistant"]/degreeDatas/li[2]/statOffsets</xpath>
					<value><li><Radiation>-0.6</Radiation></li></value>
				</li>
				<!-- lead belly -->
				<li Class="PatchOperationAdd">
				<xpath>/Defs/TraitDef[defName = "FT_LeadBelly"]/degreeDatas/li/statOffsets</xpath>
					<value><li><Radiation>-0.2</Radiation></li></value>
				</li>
			</operations>
		</match>
	</Operation>	
</Patch>