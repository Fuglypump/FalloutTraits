<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThoughtDef>
		<defName>FT_MoodOffsetGunNut</defName>
		<workerClass>ThoughtWorker_IsCarryingRangedWeapon</workerClass>
		<validWhileDespawned>true</validWhileDespawned>
		<requiredTraits>
			<li>FT_GunNut</li>
		</requiredTraits>
		<stages>
		<li>
			<label>gun nut has ranged weapon</label>
			<description>I love guns! Where's something I can shoot at?</description>
			<baseMoodEffect>8</baseMoodEffect>
		</li>
		</stages>
	</ThoughtDef>
	  
	<ThoughtDef>
		<defName>FT_MoodOffsetSerendipitous</defName>
		<workerClass>ThoughtWorker_AlwaysActive</workerClass>
		<validWhileDespawned>true</validWhileDespawned>
		<requiredTraits>
			<li>FT_Serendipitous</li>
		</requiredTraits>
		<stages>
		<li>
			<label>serendipitous</label>
			<description>Natural bonus from 'serendipitous' trait.</description>
			<baseMoodEffect>8</baseMoodEffect>
		</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>FT_MoodOffsetIronFist</defName>
		<workerClass>ThoughtWorker_IsCarryingRangedWeapon</workerClass>
		<validWhileDespawned>true</validWhileDespawned>
		<requiredTraits>
			<li>FT_IronFist</li>
		</requiredTraits>
		<stages>
		<li>
			<label>iron fist has ranged weapon</label>
			<description>I don't want to shoot from a distance, I want to fight using my hands!</description>
			<baseMoodEffect>-8</baseMoodEffect>
		</li>
		</stages>
	</ThoughtDef>
  
</Defs>